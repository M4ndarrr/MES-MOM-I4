    <Grid Background="{StaticResource BackgroundVeryLightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!--  LEFT MENU  -->
        <StackPanel Grid.Column="0"
                    Visibility="{Binding AuthVM.IsAuthenticated, Converter={StaticResource VisConverter}}"
                    Background="{StaticResource ForegroundMainBrush}"
                    >
            <TextBlock
                Text="Navigation menu"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="10 10 10 10"
                Foreground="{StaticResource ForegroundLightBrush}"
                FontSize="{StaticResource FontSizeRegular}"
                Background ="{StaticResource ForegroundMainBrush}"
                
                >
            </TextBlock>
            <telerik:RadPanelBar
                Foreground="{StaticResource ForegroundMainBrush}"
                BorderBrush="#9098a3"
                BorderThickness="1,1,0,1"
                ExpandMode="Multiple" Background="{DynamicResource ForegroundMainBrush}"
                
                >


                <telerik:RadPanelBarItem Header="User">
                    <Button
                        Command="{Binding NavCommand}"
                        CommandParameter="ProfileView"
                        Content="Profile"
                        Style="{StaticResource MenuButton}" />
                    <Button
                        Command="{Binding NavCommand}"
                        CommandParameter=""
                        Content="Log Out"
                        Style="{StaticResource MenuButton}" />
                </telerik:RadPanelBarItem>

                <telerik:RadPanelBarItem Header="Modules">
                    <Button
                        Command="{Binding NavCommand}"
                        CommandParameter="CommucationView"
                        Content="Communication"
                        Style="{StaticResource MenuButton}" />
                    <Button
                        Command="{Binding NavCommand}"
                        CommandParameter="Historian"
                        Content="Historian"
                        Style="{StaticResource MenuButton}" />
                </telerik:RadPanelBarItem>

                <telerik:RadPanelBarItem Header="Admin Module">
                    <Button
                        Command="{Binding NavCommand}"
                        Content="Users"
                        Style="{StaticResource MenuButton}" />
                    <Button
                        Command="{Binding NavCommand}"
                        Content="Roles"
                        Style="{StaticResource MenuButton}" />
                    <Button
                        Command="{Binding NavCommand}"
                        CommandParameter="UserManagementView"
                        Content="User Management"
                        Style="{StaticResource MenuButton}" />
                </telerik:RadPanelBarItem>
            </telerik:RadPanelBar>
        </StackPanel>
        <!--  MAIN FRAME  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!--  Top LoginBar  -->
            <DockPanel Grid.Row="0" Background="{StaticResource ForegroundMainBrush}">
                <Button
                    DockPanel.Dock="Right"
                    Margin="10"
                    Content="| Log OUT"
                    Style="{StaticResource TextButton}"
                    Visibility="{Binding AuthVM.IsAuthenticated, Converter={StaticResource VisConverter}}" />
                
                
                <TextBlock
                    DockPanel.Dock="Right"
                    Margin="10"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource LatoThin}"
                    FontSize="{StaticResource FontSizeSmall}"
                    Foreground="{StaticResource WordVeryDarkBrush}"
                    Text="{Binding AuthVM.CurrentUser.UserName}"
                    Visibility="{Binding AuthVM.IsAuthenticated, Converter={StaticResource VisConverter}}" />
            </DockPanel>

            <!--  FRAMe  -->
            <Grid Grid.Row="1" Margin="0,0,0,0">

                <!--  <Frame  -->
                <!--  x:Name="MainFrame"  -->
                <!--  HorizontalAlignment="Stretch"  -->
                <!--  VerticalAlignment="Stretch"  -->
                <!--  HorizontalContentAlignment="Stretch"  -->
                <!--  VerticalContentAlignment="Stretch"  -->
                <!--  Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}" />  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>


                    <Grid Grid.Row="0" Background="{StaticResource BackgroundVeryLightBrush}">
                        <Border BorderThickness="0 0 0 10">
                        <TextBlock
                            Margin="20,20,0,0"

                            FontFamily="{StaticResource LatoBold}"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource WordVeryDarkBrush}"
                            Text="{Binding CurrentPageName}" />
                        </Border>
                    </Grid>
                    <ContentControl Grid.Row="1" Content="{Binding CurrentPage}" Foreground="{x:Null}"/>
                </Grid>
            </Grid>

            <!--  Status bar  -->
            <Grid Grid.Row="1" />
        </Grid>
    </Grid>

